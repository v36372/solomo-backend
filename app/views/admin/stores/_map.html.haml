.modal
  .modal-dialog
    .modal-content
      .modal-header
        %button.close(type="button" class="close" data-dismiss="modal" aria-label="Close")
          %span(aria-hidden="true") &times
        %h4.modal-title
          Store location
      .modal-body
        .form-group
          %label Address
          .form-content= @user.store.address
        .form-group
          %label Map
          .form-content
            .map-canvas{style: 'width: 100%; height: 425px; background-color: #CCC;'}
