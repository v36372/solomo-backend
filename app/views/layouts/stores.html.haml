!!!
%html
  %head
    %title SolomoBackend
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %body
    = render "layouts/notices"
    %nav.navbar.navbar-inverse(role="navigation")
      .container-fluid
        .navbar-header
          %button.navbar-toggle{"data-target" => "#bs-example-navbar-collapse-5", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{:href => root_path} Solomo Store
        .collapse.navbar-collapse
          %ul.nav.navbar-nav
            - if current_user.is_store?
              %li.dropdown{class: ('active' if params[:controller] == "posts")}
                %a.dropdown-toggle{:href => stores_dashboards_path}
                  Dashboard
              %li.dropdown
                %a.dropdown-toggle{:href => stores_posts_path}
                  Posts
              %li.dropdown
                %a.dropdown-toggle{:href => stores_people_path}
                  People
              %li.dropdown
                %a.dropdown-toggle{:href => stores_followers_path}
                  Followers
              %li.dropdown
                %a.dropdown-toggle{:href => stores_payments_path}
                  Payments
              %li.dropdown
                %a.dropdown-toggle{:href => stores_profiles_path}
                  Profile
          = render "layouts/header_user"
    = yield
