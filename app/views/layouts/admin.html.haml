!!!
%html
  %head
    %title SolomoBackend
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
    %script{src:"https://maps.googleapis.com/maps/api/js?key=AIzaSyDSAyIA48rQ8VJtuJ140hblQaU3XCrT6bI", async: true, defer: true}
  %body
    = render "layouts/notices"
    %header
      %nav.navbar(role="navigation")
        .container-fluid
          .navbar-header
            %button.navbar-toggle{"data-target" => "#bs-example-navbar-collapse-5", "data-toggle" => "collapse", :type => "button"}
              %span.sr-only Toggle navigation
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
            %a.navbar-brand{:href => admin_root_path} Solomo Admin
          .collapse.navbar-collapse
            %ul.nav.navbar-nav
              %li.dropdown{class: ('active' if params[:controller] == "posts")}
                %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                  Posts
                  %b.caret
                %ul.dropdown-menu{:role => "menu"}
                  %li
                    %a{:href => admin_posts_path} All posts
                  %li
                    %a{:href => new_admin_post_path} Create new post
              %li.dropdown
                %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                  Users
                  %b.caret
                %ul.dropdown-menu{:role => "menu"}
                  %li
                    %a{:href => admin_users_path} All users
              %li.dropdown
                %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                  Stores
                  %b.caret
                %ul.dropdown-menu{:role => "menu"}
                  %li
                    %a{:href => processing_admin_stores_path} Processing stores
                  %li
                    %a{:href => admin_stores_path} Verified stores
            = render "layouts/header_user"
    = yield